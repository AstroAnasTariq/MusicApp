<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.MainActivity">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/artist1_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/artistsImage"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/little_margin"
                android:contentDescription="@string/artist1_name"
                android:scaleType="centerCrop"
                android:src="@drawable/adele2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/artistsText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/readMoreButtonArtist1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/read_more_button_name"
                    android:textColor="@android:color/white"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

