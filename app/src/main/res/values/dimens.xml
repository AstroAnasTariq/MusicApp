<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="between">16dp</dimen>
    <dimen name="big">32dp</dimen>
    <dimen name="small">8dp</dimen>
    <dimen name="large">40dp</dimen>
    <dimen name="little_margin">8dp</dimen>
    <dimen name="size_title_of_album">16sp</dimen>
    <dimen name="size_title_of_song">16sp</dimen>
    <dimen name="size_of_name_current_song">18sp</dimen>
    <style name="MenuCategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MenuCategoryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="MenuCategoryIcon">
        <item name="android:padding">16dp</item>
        <item name="android:tint">@android:color/background_light</item>
    </style>
    <style name="NameOfBand">
        <item name="android:textSize">@dimen/size_title_of_album</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleOfAlbum">
        <item name="android:textSize">@dimen/size_title_of_album</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>