<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/albums"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artist"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MusicStore"
            android:label="@string/music_store"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NowIsPlayingActivity"
            android:label="@string/now_is_playing"
            android:parentActivityName=".MainActivity"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.musicapp.MainActivity" />

    </application>

</manifest>